{
  "name": "@fefeding/ppt-parser",
  "version": "1.0.0",
  "description": "PPTX文件解析与序列化核心库，纯TS编写，支持解析PPTX为JSON结构、JSON序列化为标准PPTX文件，无框架依赖",
  "main": "./dist/ppt-parser.cjs.js",
  "module": "./dist/ppt-parser.esm.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/ppt-parser.esm.js",
      "require": "./dist/ppt-parser.cjs.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "homepage": "https://github.com/fefeding/pptx-parser#readme",
  "bugs": {
    "url": "https://github.com/fefeding/pptx-parser/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fefeding/pptx-parser.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:rollup\" \"npm run static\"",
    "dev:rollup": "rollup -c rollup.config.mjs -w",
    "dev:static": "vite --config vite.static.config.ts --watch",
    "build": "rimraf dist && rollup -c rollup.config.mjs --environment production",
    "build:esm": "vite build --config vite.static.config.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "vue": "cd examples/vue-demo && npm run dev && cd ../..",
    "static": "vite --config vite.static.config.ts",
    "static:build": "vite build --config vite.static.config.ts",
    "prepublishOnly": "npm run build && npm run type-check"
  },
  "keywords": [
    "pptx",
    "ppt解析",
    "ppt导出",
    "pptx parser",
    "pptx serializer",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "jszip": "^3.10.1",
    "tinycolor2": "^1.6.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/html-escaper": "^3.0.2",
    "@types/node": "^20.11.17",
    "@vitest/coverage-v8": "^1.2.0",
    "concurrently": "^9.2.1",
    "jsdom": "^27.4.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "src",
    "docs",
    "examples",
    "tsconfig.json",
    "README.md"
  ]
}