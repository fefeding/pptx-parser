{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler", // ✅ 核心修改：改为Bundler，适配Rollup打包，TS官方推荐
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/types",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    // ✅ 删除 allowImportingTsExtensions 配置，彻底解决冲突报错
    "noEmit": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "rollup.config.mjs", "examples", "docs", "src/tinycolor.js", "src/js"]
}